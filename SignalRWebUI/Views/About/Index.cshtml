@model List<ResultAboutDto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Home Page About Us Operations</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">About LIST</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform operations related to the About Us field. Remember to create only 1 about us field for theme integrity.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Title</th>
									<th scope="col">Description</th>
									<th scope="col">Edit</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.AboutTitle</td>
										<td>@item.AboutDescription</td>
										<td>
											<a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">Delete</a>
											<a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success">Update</a>
										</td>
										
									</tr>
								}
							</tbody>
						</table>
						<a href="/About/CreateAbout/" class="btn btn-outline-primary">New Description</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
