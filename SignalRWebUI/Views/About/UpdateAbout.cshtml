@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Home Page About Us Operations</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">About Us Article Update Page</div>
                        </div>
                        <input type="hidden" asp-for="AboutID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Enter Title</label>
                                <input type="text" class="form-control" asp-for="AboutTitle" id="Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ImageUrl">enter Image Url</label>
                                <input type="text" class="form-control" asp-for="AboutImageUrl" id="ImageUrl">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Enter Description</label>
                                <textarea rows="5" class="form-control" asp-for="AboutDescription" id="Description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Update!</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>