@model CreateMessageDto

<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Contact
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post" asp-action="SendMessage" asp-controller="Default">
                        <div>
                            <input type="text" class="form-control" placeholder="Name and Surname" asp-for="NameSurname" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Phone number" asp-for="Phone" />
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="Mail Adress" asp-for="Mail" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Subject" asp-for="Subject" />
                        </div>
                        <div>
                            <textarea asp-for="MessageContent" rows="10" placeholder="Content" class="form-control"></textarea>
                        </div>

                        <div class="btn_box">
                            <button>
                                Send
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3196.1063034149215!2d31.3907256!3d36.76801719999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14c35bd71444288d%3A0xaf9cf5d1d8c7cfd0!2sSide%20Antik%20Kenti!5e0!3m2!1str!2str!4v1743249623258!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    
                </div>
            </div>
        </div>
    </div>
</section>
