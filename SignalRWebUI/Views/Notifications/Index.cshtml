@model List<ResultNotificationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;

}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Notifications Operations</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Notification List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform the transactions related to the certificates below.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Description</th>
									<th scope="col">Date</th>
									<th scope="col">Status</th>
									<th scope="col">Edit</th>
									<th scope="col">Mark</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.Status</td>
										<td>
											<a href="/Notifications/DeleteNotification/@item.NotificationID" class="btn btn-outline-danger">Delete</a>
											<a href="/Notifications/UpdateNotification/@item.NotificationID" class="btn btn-outline-success">Update</a>
										</td>
										<td><a href="/Notifications/NotificationStatusChangeToTrue/@item.NotificationID" class="btn btn-outline-warning">Read</a>
										<a href="/Notifications/NotificationStatusChangeToFalse/@item.NotificationID" class="btn btn-outline-secondary">Unread</a>
											</td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Notifications/CreateNotification/" class="btn btn-outline-primary">New Entry</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

