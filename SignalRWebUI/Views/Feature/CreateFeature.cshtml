@model CreateFeatureDto

@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Feature Operations</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">New Feature entry </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="FeatureTitle">Add Feature Name</label>
                                <input type="text" class="form-control" asp-for="FeatureTitle" id="FeatureTitle" />
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="FeatureDescription">Add Feature Name</label>
                                <input type="text" class="form-control" asp-for="FeatureDescription" id="FeatureDescription" />
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">ADD</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

