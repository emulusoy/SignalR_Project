@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Tables</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Feature LIST</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform Feature-related operations below. :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#####</th>
									<th scope="col">Title 1</th>
									<th scope="col">Description</th>
									<th scope="col">Edit</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.FeatureID</td>
										<td>@item.FeatureTitle</td>
										<td>@item.FeatureDescription</td>
										<td>
											<a href="/Feature/DeleteFeature/@item.FeatureID/" class="btn btn-outline-danger">Delete</a>
											<a href="/Feature/UpdateFeature/@item.FeatureID/" class="btn btn-outline-success">Update</a>

										</td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Feature/CreateFeature/" class="btn btn-outline-info">Add New</a>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
