@model UpdateDiscountDto


@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Discount Operations</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update Discount entry </div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="DiscountID"  />
                            <div class="form-group">
                                <label for="DiscountTitle">Add Discount DiscountTitle</label>
                                <input type="text" class="form-control" asp-for="DiscountTitle" id="DiscountTitle" />
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="DiscountAmount">Add Discount DiscountAmount</label>
                                <input type="text" class="form-control" asp-for="DiscountAmount" id="DiscountAmount" />
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="DiscountImageUrl">Add Discount DiscountImageUrl</label>
                                <input type="text" class="form-control" asp-for="DiscountImageUrl" id="DiscountImageUrl" />
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="DiscountDescription">Add Discount Description</label>
                                
                                <textarea class="form-control" asp-for="DiscountDescription" id="DiscountDescription" ></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>