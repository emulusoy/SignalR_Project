@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Home Page SocialMedia Us Operations</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update SocialMedia Entry</div>
                        </div>
                        <input type="hidden" asp-for="SocialMediaID" value="" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Enter TITLE</label>
                                <input type="text" class="form-control" asp-for="SocialMediaTitle" id="Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ImageUrl">Enter  URL</label>
                                <input type="text" class="form-control" asp-for="SocialMediaUrl" id="ImageUrl">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="SocialMediaIcon">Enter Social Media Icon</label>
                                <textarea rows="5" class="form-control" asp-for="SocialMediaIcon" id="SocialMediaIcon"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>