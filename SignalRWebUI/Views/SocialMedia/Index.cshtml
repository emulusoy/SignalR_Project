@model List<ResultSocialMediaDto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Home Page SocialMedia Us Operations</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">SocialMedia LIST</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform operations related to the SocialMedia Us field. Remember to create only 1 SocialMedia us field for theme integrity.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">##</th>
									<th scope="col">Title</th>
									<th scope="col">URL</th>
									<th scope="col">Icon</th>
									<th scope="col">Edit</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SocialMediaID</td>
										<td>@item.SocialMediaTitle</td>
										<td>@item.SocialMediaUrl</td>
										<td>@item.SocialMediaIcon</td>
										<td>
											<a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger">Delete</a>
											<a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-success">Update</a>
										</td>

									</tr>
								}
							</tbody>
						</table>
						<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-outline-primary">New Description</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

