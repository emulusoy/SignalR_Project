@model SignalRWebUI.Dtos.CategoryDtos.CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Category Operations</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">New category entry </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Add Category Name</label>
                                <input type="text" class="form-control" asp-for="CategoryName" id ="categoryname"/>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">ADD</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

