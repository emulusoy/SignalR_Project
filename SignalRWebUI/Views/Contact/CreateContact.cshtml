@model CreateContactDto


@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Home Page Contact Us Operations</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">New Contact Entry</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Enter Contact Location</label>
                                <input type="text" class="form-control" asp-for="ContactLocation" id="Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ImageUrl">Enter Phone</label>
                                <input type="text" class="form-control" asp-for="ContactPhone" id="ImageUrl">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ContactMail">Enter Contact Mail</label>
                                <input type="email" class="form-control" asp-for="ContactMail" id="ContactMail">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Enter Footer Description</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" id="Description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>